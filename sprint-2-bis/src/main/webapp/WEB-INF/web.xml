<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Framework Sprint 2-bis - Application de test avancée</display-name>
    <description>
        Application de démonstration pour le Sprint 2-bis du framework.
        Utilise les annotations @Controller pour l'auto-découverte des contrôleurs
        et @Url pour le routage automatique des URLs.
        Fonctionnalités : Auto-découverte, routage intelligent, support multi-packages.
    </description>

    <!-- Configuration du servlet de routage principal amélioré -->
    <servlet>
        <servlet-name>rooter</servlet-name>
        <servlet-class>jframework.servlet.RooterServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <!-- Mapping du servlet pour intercepter toutes les requêtes -->
    <servlet-mapping>
        <servlet-name>rooter</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- Configuration pour les ressources statiques -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/assets/*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.png</url-pattern>
    </servlet-mapping>
    
    <!-- Page d'accueil par défaut -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>annotation.jsp</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>